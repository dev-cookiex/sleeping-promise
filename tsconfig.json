{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": [ "ESNext" ],
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [ "src/*" ],
      "@src": [ "src/index" ]
    },
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true
  }
}
